{
  "manifest_version": 3,
  "name": "YouTube Q&A Assistant",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "youtu.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
